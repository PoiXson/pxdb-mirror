{
	"name":        "pxn/pxdb",
	"description": "PHP Database Utilities Library",
	"type":        "library",
	"homepage":    "https://poixson.com/",
	"license":     "AGPL-3.0",
	"keywords": [
		"framework", "utilities", "database", "mysql", "sqlite"
	],
	"support": {
		"source":  "https://git.poixson.com/summary/pxn!pxdb.git",
		"issues":  "https://git.poixson.com/tickets/pxn!pxdb.git",
		"discord": "https://discord.gg/jHgP2a3kDx"
	},
	"authors": [{
		"name": "lorenzop",
		"role": "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\pxdb\\": "src/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"pxn/phputils": "*",
		"ext-pdo": "*",
		"pxn/composerlocaldev": "*"
	},
	"suggest": {
		"ext-pdo_mysql": "*",
		"ext-pdo_sqlite": "*"
	},
	"require-dev": {
		"filp/whoops": "*",
		"kint-php/kint": "*",
		"phpunit/phpunit": "*"
	},
	"config": {
		"allow-plugins": {
			"pxn/composerlocaldev": true
		}
	}
}
