{
	"name":        "pxn/pxdb",
	"description": "PHP Database Utilities Library",
	"type":        "library",
	"homepage":    "https://poixson.com/",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities", "database", "mysql", "sqlite"
	],
	"support": {
		"source": "https://git.poixson.com/summary/pxn!pxdb.git",
		"issues": "https://git.poixson.com/tickets/pxn!pxdb.git",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\pxdb\\": "src/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"pxn/phputils": "0.3.*",
		"ext-pdo": "*",
		"pxn/composerlocaldev": "1.*"
	},
	"suggest": {
		"ext-pdo_mysql": "*",
		"ext-pdo_sqlite": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "*"
	}
}
